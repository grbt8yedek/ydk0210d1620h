# ==============================================
# GRBT8 ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local or .env files to Git

# -----------------------------
# Database (Neon PostgreSQL)
# -----------------------------
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# -----------------------------
# NextAuth Configuration
# -----------------------------
NEXTAUTH_SECRET="your-nextauth-secret-key-min-32-characters"
NEXTAUTH_URL="http://localhost:4000"

# -----------------------------
# OAuth Providers
# -----------------------------
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Facebook OAuth
FACEBOOK_CLIENT_ID="your-facebook-app-id"
FACEBOOK_CLIENT_SECRET="your-facebook-app-secret"

# -----------------------------
# Admin Configuration
# -----------------------------
ADMIN_EMAILS="admin@grbt8.store,manager@grbt8.store"
ADMIN_BYPASS="false"
ADMIN_PIN="7000"

# -----------------------------
# Redis (Upstash) - Rate Limiting & Cache
# -----------------------------
KV_REST_API_URL="https://your-redis-instance.upstash.io"
KV_REST_API_TOKEN="your-upstash-token"
KV_REST_API_READ_ONLY_TOKEN="your-upstash-readonly-token"
KV_URL="rediss://default:token@your-redis-instance.upstash.io:6379"
REDIS_URL="rediss://default:token@your-redis-instance.upstash.io:6379"

# -----------------------------
# Bilet Dükkanı API
# -----------------------------
BILETDUKKANI_BASE_URL="https://api.biletdukkani.com"
BILETDUKKANI_CLIENT_ID="agent.web"
BILETDUKKANI_CLIENT_SECRET="your-client-secret"
BILETDUKKANI_USERNAME="your-api-username"
BILETDUKKANI_PASSWORD="your-api-password"

# -----------------------------
# Flight API
# -----------------------------
FLIGHT_API_KEY="your-flight-api-key"

# -----------------------------
# Monitoring & Testing
# -----------------------------
ALLOW_TEST_MONITORING="false"

# -----------------------------
# System (Auto-filled by platform)
# -----------------------------
NODE_ENV="development"

# Virtual list feature flag
NEXT_PUBLIC_ENABLE_VIRTUAL_LIST=false
